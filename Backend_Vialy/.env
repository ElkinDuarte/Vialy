
# ============================================
# FLASK CONFIGURATION
# ============================================
SECRET_KEY=12345
DEBUG=True
PORT=8000

# ============================================
# GOOGLE/GEMINI API
# ============================================
# Obtén tu API key en: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=AIzaSyBW80Faqqb1ZHXGw9e1F2bcTEsHyX3uWcU

# Alternativamente, si usas Google Cloud Platform con service account:
# GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# ============================================
# MODELO GEMINI
# ============================================
# Opciones: gemini-2.0-flash, gemini-1.5-pro, gemini-1.5-flash
MODEL_NAME=gemini-2.0-flash

# Temperatura del modelo (0.0 = más determinístico, 1.0 = más creativo)
TEMPERATURE=0.1

# Máximo de tokens en la respuesta
MAX_TOKENS=500

# ============================================
# RAG - RETRIEVAL AUGMENTED GENERATION
# ============================================
# Ruta donde se guarda el índice FAISS
VECTOR_DB_PATH=./vectorstore/faiss_index

# Ruta de tus documentos PDF (Código de Tránsito)
DOCUMENTS_PATH=./documents

# Número de documentos relevantes a recuperar por consulta
TOP_K_DOCUMENTS=3

# Tamaño de cada chunk de texto (en caracteres)
CHUNK_SIZE=1000

# Superposición entre chunks consecutivos
CHUNK_OVERLAP=200

# ============================================
# EMBEDDINGS
# ============================================
# Modelo de embeddings de HuggingFace
# Opciones populares:
# - sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2 (multilingüe, ligero)
# - sentence-transformers/paraphrase-multilingual-mpnet-base-v2 (multilingüe, más preciso)
# - hkunlp/instructor-large (inglés, muy preciso)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# ============================================
# CONVERSACIÓN Y SESIONES
# ============================================
# Número máximo de mensajes a mantener en el historial por sesión
MAX_CONVERSATION_HISTORY=5

# Tiempo de expiración de sesiones inactivas (en horas)
SESSION_TIMEOUT_HOURS=24

# ============================================
# LOGGING
# ============================================
# Niveles: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# FIREBASE (Opcional - Solo si lo usas)
# ============================================
# FIREBASE_PROJECT_ID=tu-proyecto-id
# FIREBASE_PRIVATE_KEY_ID=tu-private-key-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\ntu_private_key_aqui\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=tu-service-account@tu-proyecto.iam.gserviceaccount.com
# FIREBASE_DATABASE_URL=https://tu-proyecto.firebaseio.com

# ============================================
# CORS (Opcional - para producción)
# ============================================
# Lista de orígenes permitidos separados por coma
# ALLOWED_ORIGINS=https://tu-frontend.com,https://app.tu-dominio.com

# ============================================
# BASE DE DATOS (Opcional - para persistencia)
# ============================================
# Si decides usar PostgreSQL o MySQL en lugar de almacenamiento en memoria
# DATABASE_URL=postgresql://usuario:password@localhost:5432/transito_db
# o
# DATABASE_URL=mysql://usuario:password@localhost:3306/transito_db

# ============================================
# REDIS (Opcional - para sesiones en producción)
# ============================================
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=tu-password-redis

# ============================================
# RATE LIMITING (Opcional)
# ============================================
# Límite de requests por minuto por IP
# RATE_LIMIT_PER_MINUTE=60

# ============================================
# SENTRY (Opcional - para monitoreo de errores)
# ============================================
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ============================================
# ENTORNO
# ============================================
# Opciones: development, production, testing
ENVIRONMENT=development